<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Prompt" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/info_icon.png" />
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@../DarkTheme.css" />
            </stylesheets>
            <VBox>
                <children>
                    <StackPane prefHeight="14.0" prefWidth="530.0" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
                        <children>
                            <Label fx:id="displayMessage" styleClass="label-bright" text="Label"/>
                        </children>
                    </StackPane>
                    <HBox fx:id="helpMessageContainer" alignment="CENTER" style="-fx-background-color: #383838;" VBox.vgrow="ALWAYS" maxHeight="500.0">
                        <children>
                            <AnchorPane>
                                <HBox.margin>
                                    <Insets left="5.0" />
                                </HBox.margin>
                                <children>
                                    <Button fx:id="yesButton" mnemonicParsing="false" onAction="#handleYes" styleClass="button" text="Yes" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="20.0" />
                                </children>
                            </AnchorPane>
                            <AnchorPane>
                                <children>
                                    <Button fx:id="noButton" mnemonicParsing="false" onAction="#handleNo" text="No" AnchorPane.leftAnchor="20.0" AnchorPane.bottomAnchor="0.0"/>
                                </children>
                            </AnchorPane>
                        </children>
                        <opaqueInsets>
                            <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                        </opaqueInsets>
                        <padding>
                            <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                        </padding>
                    </HBox>
                </children>
            </VBox>
        </Scene>
    </scene>
</fx:root>
